extends layout 

block content 
  h1= title 

  if author_list.length 
    ul.list-group.list-group-numbered
      li.list-group-item.d-flex.justify-content-between.align-items-start
        p.normalized Author
        |   Lifespan
      each author in author_list 
        li.list-group-item.d-flex.justify-content-between.align-items-start
          a(href=author.url class='fw-bold') #{author.name} 
          |    (#{author.date_of_birth_formatted} - #{author.date_of_death_formatted}) 

  else 
    p There are no Authors
