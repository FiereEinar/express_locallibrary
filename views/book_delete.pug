extends layout 

block content 

  h1 #{title}: #{book.title}
  //- p= 

  if bookinstances.length 
    p #[strong Delete the following book instances before deleting this book.] 
    div(style='margin-left:20px;margin-top:20px')
      
      h4 Book Instances 
      ul
        each book in bookinstances
          li 
            a(href=book.url) #{book.imprint} 
            |   Due back: #{book.due_back_formatted}

  else 
    p Do you really want to delete this book?

    form(method='POST')
      div.form-group 
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete